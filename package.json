{
  "name": "codebuilder",
  "author": {
    "name": "Santiago Comeras Oteo (SCO Techlab) <sco.techlab@gmail.com>"
  },
  "version": "0.0.0",
  "scripts": {
    "install-frontend": "cd ./codebuilder-frontend && npm i && cd ..",
    "install-backend": "cd ./codebuilder-backend && npm i && cd ..",
    "install": "concurrently \"npm run install-frontend\" \"npm run install-backend\"",
    "run-frontend-dev": "cd ./codebuilder-frontend && npm run start && cd ..",
    "run-backend-dev": "cd ./codebuilder-backend && npm run start:dev && cd ..",
    "run-dev": "concurrently \"npm run run-frontend-dev\" \"npm run run-backend-dev\"",
    "build-prod-frontend": "cd ./codebuilder-frontend && npm run build:prod && cd ..",
    "build-prod-backend": "cd ./codebuilder-backend && npm run prebuild && npm run build && cd ..",
    "build-prod": "concurrently \"npm run build-prod-frontend\" \"npm run build-prod-backend\"",
    "cp-public": "copyfiles --flat ./codebuilder-frontend/dist/* ./codebuilder-backend/dist/public",
    "pm2:run-backend-prod": "cd ./codebuilder-backend && npm run pm2:start:prod && cd ..",
    "pm2:run-prod": "npm run pm2:run-backend-prod"
  },
  "private": true,
  "dependencies": {
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1"
  }
}
